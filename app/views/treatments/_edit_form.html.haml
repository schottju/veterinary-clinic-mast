= simple_form_for treatment do |f|
  = f.error_notification
  .form-inputs
    .row
      .col-md-1
      .col-md-5
        = f.input :name, label: 'Nom', placeholder: 'Entrez le nom du traitement', required: true, autofocus: true
      .col-md-5
        = f.input :cost, label: 'Coût (EUR)', placeholder: 'Entrez le coût', readonly: true, as: :string, input_html: { value: change_period_to_comma(f.object.cost) }, hint: 'Vous ne pouvez pas modifier le coût du traitement. Créer un nouveau.'
      .col-md-1
    .row
      .col-md-1
      .col-md-7
        = f.input :description, label: 'Description', placeholder: 'Entrez la description'
      .col-md-3
        = f.input :status, label: 'Status', required: true
      .col-md-1
    .row
      .col-md-1
      .col-md-10
        .form-actions
          = link_to "Annuler", dictionaries_path(tab: 'treatments'), class: "btn btn-default"
          .pull-right
            = f.button :submit, "Sauvegarder", class: "btn btn-default"
      .col-md-1
