.panel.panel-default
  .panel-heading Calendrier
  .panel-body
    #veterinarians
      %h2#month
        = link_to icon('chevron-left'), date: @date.prev_month
        = l(@date, format: :short)
        = link_to icon('chevron-right'), date: @date.next_month
      = calendar @date do |date|
        = date.day
        %br
        - if Date.today <= date
          - if @veterinarian.on_vacation?(date)
            = link_to "Vacances", '#', class: "btn btn-warning disabled"
          - elsif @veterinarian.working_today?(date)
            = link_to icon('plus'), new_user_appointment_path(params[:user_id], veterinarian_id: @veterinarian.id, day: date), title: 'Inscrivez-vous pour une visite', class: "btn btn-success"
          - else
            = link_to "JournÃ©e de repos", '#', class: "btn btn-warning disabled"
        - else
          %h4= "-"
