= form_tag user_appointments_path(user), method: :get do
  = hidden_field_tag :direction, params[:direction]
  = hidden_field_tag :sort, params[:sort]
  .form-inline
    = text_field_tag :search, params[:search], placeholder: 'Entrez votre rendez-vous', class: 'form-control', size: 20
    = submit_tag "Recherche", name: nil, class: 'btn btn-default'
    .pull-right
      = link_to 'Nouveau rendes-vous', user_veterinarians_path(user), class: "btn btn-default"
